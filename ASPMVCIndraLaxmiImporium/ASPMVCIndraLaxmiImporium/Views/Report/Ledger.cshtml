
@{
    ViewBag.Title = "Ledger";

    List<SelectListItem> li = new List<SelectListItem>();
    li.Add(new SelectListItem() { Text = "--Select--", Value = "0" });
    li.Add(new SelectListItem() { Text = "Debtor", Value = "Debtor" });
    li.Add(new SelectListItem() { Text = "Creditor", Value = "Creditor" });
    li.Add(new SelectListItem() { Text = "Transport", Value = "Transport" });
}


<section class="content-header">
    <h1>
        Ledger Report
        <small>Preview</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="#"><i class="fa fa-dashboard"></i> Report</a></li>
        <li class="active">Ledger Report</li>
    </ol>
</section>


<!-- Main content -->
<section class="content">
    <!-- Default box -->
    <div class="box">
        <div class="box-header with-border">
            <h3 class="box-title">Ledger Reports</h3>
            <div class="box-tools pull-right">
                <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip"
                        title="Collapse">
                    <i class="fa fa-minus"></i>
                </button>
                <button type="button" class="btn btn-box-tool" data-widget="remove" data-toggle="tooltip" title="Remove">
                    <i class="fa fa-times"></i>
                </button>
            </div>
        </div>


        <div class="box-body">
            <div class="col-md-6">
                <div class="form-group">
                    <label>Customer</label>
                    @Html.DropDownList("Customer", li, new { @class = "form-control", @onchange = "javascript:GetDropDownFor('Customer','/OrderRequest/GetCustomer/','LedgerID')" })
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label>Ledger Name</label>
                    @Html.DropDownList("LedgerID", Enumerable.Empty<SelectListItem>(), "--Select--", new { @class = "form-control", disabled = "disabled", @onchange = "javascript:GetDetailFor('LedgerID','/Report/GetCustomer/','Report')" })
                </div>
            </div>
            <div class="clearfix"></div>
            <div class="row" id="Report"></div>




        </div>
        <!-- /.box-body -->
        @*<div class="box-footer">
                Footer
            </div>*@
        <!-- /.box-footer-->
    </div>
    <!-- /.box -->
</section>
<!-- /.content -->




