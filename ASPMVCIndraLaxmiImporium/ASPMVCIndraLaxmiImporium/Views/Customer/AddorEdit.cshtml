@model ASPMVCIndraLaxmiImporium.Models.Customer

@{
	ViewBag.Title = "AddorEdit";
	Layout = null;

	List<SelectListItem> li = new List<SelectListItem>();
	li.Add(new SelectListItem() { Text = "-- Select --", Value = "None" });
	li.Add(new SelectListItem() { Text = "Debtor", Value = "Debtor" });
	li.Add(new SelectListItem() { Text = "Creditor", Value = "Creditor" });
	li.Add(new SelectListItem() { Text = "Transport", Value = "Transport" });
}


@using (Html.BeginForm("AddorEdit", "Customer", FormMethod.Post, new { enctype = "multipart/form-data", onSubmit = "return jQueryAjaxPost(this);", data_resetUrl = Url.Action("AddorEdit", "Customer", new { id = 0 }) })) //data-resetUrl
{
	@Html.AntiForgeryToken()

	<div class="form-horizontal">

		@Html.ValidationSummary(true, "", new { @class = "text-danger" })
		@Html.HiddenFor(model => model.CustomerID)

		<div class="form-group">
			@Html.LabelFor(model => model.CustomerName, htmlAttributes: new { @class = "control-label col-md-2" })
			<div class="col-md-10">
				@Html.EditorFor(model => model.CustomerName, new { htmlAttributes = new { @class = "form-control" } })
				@Html.ValidationMessageFor(model => model.CustomerName, "", new { @class = "text-danger" })
			</div>
		</div>

		<div class="form-group">
			@Html.LabelFor(model => model.Type, htmlAttributes: new { @class = "control-label col-md-2" })
			<div class="col-md-10">
				@Html.DropDownList("Type",li, new { @class = "form-control" })
				@Html.ValidationMessageFor(model => model.Type, "", new { @class = "text-danger" })
			</div>
		</div>

		<div class="form-group">
			@Html.LabelFor(model => model.PreviousBalance, htmlAttributes: new { @class = "control-label col-md-2" })
			<div class="col-md-10">
				@Html.EditorFor(model => model.PreviousBalance, new { htmlAttributes = new { @class = "form-control" } })
				@Html.ValidationMessageFor(model => model.PreviousBalance, "", new { @class = "text-danger" })
			</div>
		</div>

		<div class="form-group">
			<div class="col-md-offset-2 col-md-10">
				<input type="submit" value="Save" id="Save" class="btn btn-success" />
			</div>
		</div>
	</div>
}

