@model IEnumerable<ASPMVCIndraLaxmiImporium.Models.BillCustomer>


@{
    ViewBag.Title = "Order Request";
}

<section class="content-header">
    <h1>
        Order Request
        <small>Entry the Order Request</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">Order Request</li>
    </ol>
</section>
<!-- Main content -->
<section class="content">
    <!-- Default box -->
    <div class="box">
        <div class="box-header with-border">
            <h3 class="box-title">Order Request</h3>
            <div class="box-tools pull-right">
                <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip"
                        title="Collapse">
                    <i class="fa fa-minus"></i>
                </button>
                <button type="button" class="btn btn-box-tool" data-widget="remove" data-toggle="tooltip" title="Remove">
                    <i class="fa fa-times"></i>
                </button>
            </div>
        </div>


        <div class="box-body">

            <table class="table table-bordered table-condensed table-hover table-striped" id="dataTable">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.BillNumber)
                        </th>
                        <th>
                            @Html.DisplayName("Debitor Name")
                        </th>

                        @*<th>
                        @Html.DisplayNameFor(model => model.CBM)
                    </th>*@
                        <th>
                            @Html.DisplayName("Transport Name")
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Date)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Total)
                        </th>
                        <th>Action</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.BillNumber)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CustomerCode)
                            </td>

                            @*<td>
                            @Html.DisplayFor(modelItem => item.CBM)
                        </td>*@
                            <td>
                                @Html.DisplayFor(modelItem => item.TransportCode)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Date)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Total)
                            </td>
                            <td>
                                <a class="btn btn-success" href="@Url.Action("AddorEdit", "OrderRequest", new { id=@item.BillCustomerID })"> <i class="fa fa-eye"></i> View</a>
                            </td>
                        </tr>
                    }
                </tbody>

            </table>


        </div>
        <!-- /.box-body -->
        @*<div class="box-footer">
                Footer
            </div>*@
        <!-- /.box-footer-->
    </div>
    <!-- /.box -->
</section>
<!-- /.content -->

<link href="//cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css" rel="stylesheet" />

<script src="//cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>
<script>
        function activatejQueryTable() {
            $('#dataTable').DataTable();

        }
        $(function () {
            activatejQueryTable();
        });
</script>
@*}*@






