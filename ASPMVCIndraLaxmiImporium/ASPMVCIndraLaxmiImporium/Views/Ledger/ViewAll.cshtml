@model IEnumerable<ASPMVCIndraLaxmiImporium.Models.Ledger>

@{
    ViewBag.Title = "ViewAll";
    Layout = null;
}


<table class="table table-striped table-bordered table-condensed" id="dataTable">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.LedgerNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CustomerID)
            </th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.LedgerNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Type)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CustomerID)
                </td>
                <td>
                    <a class="btn btn-success" onclick="Edit('@Url.Action("AddorEdit", "Ledger", new { id=@item.LedgerID })')"> <i class="fa fa-edit"></i> Edit</a>
                    <a class="btn btn-danger" onclick="Delete('@Url.Action("Delete", "Ledger", new { id=@item.LedgerID })')"><i class="fa fa-trash"></i> Delete</a>
                </td>
            </tr>
        }
    </tbody>

</table>
